# .env example, this is for local development only

# Flask-Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_actual_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password # IMPORTANT: Use an App Password for Gmail!
MAIL_DEFAULT_SENDER=your_actual_email@gmail.com

# Other example environment variables you might have
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=super-secret-unguessable-key-for-flask-sessions # This should be a long, random string
DATABASE_URL=sqlite:///site.db